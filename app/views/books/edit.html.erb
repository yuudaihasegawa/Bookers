<h1>Editing Book</h1>

<%= form_for(@book) do |f| %>
	<div class="error">
	   <% if @book.errors.any? %>
	       <h4><%= @book.errors.count %>errors prohibited this book from being saved:</h4>
	       <ul>
		      <% @book.errors.full_messages.each do |message| %>
		      <li><%= message %></li>
		      <% end %>
	       </ul>
	     <% end %>
	</div>

    <div class="field">
	  <h4>Title</h4>
	  <%= f.text_field :title %>
	</div>
    <div class="field">
	  <h4>Body</h4>
	  <%= f.text_area :body %>
	</div>

  <%= f.submit 'Update book' %>
<% end %>

<%= link_to "Show",book_path(@book) %>
<%= link_to "Back",books_path %>