
<% if flash[:notice] %>
  <div class="flash">
  	<%= flash[:notice] %>
  </div>
<% end %>

<h1>Books</h1>
	<table class="table">
	  <thead>
	  	<tr class="tree">
		  <th>Title</th>
		  <th>Body</th>
		  <th colspan="3"></th>
		</tr>
	  </thead>
		 <tbody>
		 	<% @books.each do |book| %>
		 	 <tr>
				<td><%= book.title %></td>
				<td><%= book.body %></td>
				<td><%= link_to "Show",book_path(book.id) %></td>
				<td><%= link_to "Edit",edit_book_path(book.id) %></td>
				<td><%= link_to "destroy",book_path(book.id),method: :delete,"data-confirm"=>"本当に削除しますか？" %></td>
			 </tr>
			<% end %>
		 </tbody>
	</table>
<!-- form_for -->
　<%= form_for(@book) do |f| %>
     <div class="error">
	     <% if @book.errors.any? %>
	       <h4><%= @book.errors.count %>errors prohibited this book from being saved:</h4>
	       <ul>
		      <% @book.errors.full_messages.each do |message| %>
		      <li><%= message %></li>
		      <% end %>
	       </ul>
         <% end %>
     </div>

      <h2>New book</h2>
      <div class="field">
		  <h4>Title</h4>
		  <%= f.text_field :title %>
	  </div>
      <div class="field">
		  <h4>Body</h4>
		  <%= f.text_area :body %>
	  </div>
	  <%= f.submit 'Create Book' %>
 <% end %>
