<table>
  <thead>
  	<tr>
	  <th>Title</th>
	  <th>Body</th>
	  <th colspan="5"></th>
	</tr>
  </thead>
    <% @books.each do |book| %>
	  <tr align="center">
		<td><%= @book.title %></td>
		<td><%= @book.body %></td>
		<td><%= link_to "Show",book_path(book.id) %></td>
		<td><%= link_to "Edit",edit_book_path(book.id) %></td>
		<td><%= link_to "destroy",book_path(book.id),method: :delete,"data-confirm"=>"本当に削除しますか？" %></td>
	  </tr>
	<% end %>
</table>

<!-- form_for -->
<h1>New book</h1>
　<%= form_for (@book) do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>

  <%= f.submit '投稿' %>
<% end %>
